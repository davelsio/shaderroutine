{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@api/*": [ "./api/*" ],
      "@assets/*": [ "./assets/*" ],
      "@components/*": [ "./components/*" ],
      "@features/*": [ "./features/*" ],
      "@forms/*": [ "./forms/*" ],
      "@helpers/*": [ "./helpers/*" ],
      "@hooks/*": [ "./hooks/*" ],
      "@shaders/*": [ "./shaders/*" ],
      "@state/*": [ "./state/*" ],
      "@theme/*": [ "./theme/*" ],
      "@typography/*": [ "./typography/*" ],
      "@utils/*": [ "./utils/*" ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
  ]
}
